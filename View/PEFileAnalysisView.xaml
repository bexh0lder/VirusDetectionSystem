        <Border Margin="0 70 0 0" x:Name="window2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border.RenderTransform>
                <TranslateTransform X="{Binding ElementName=window,Path=ActualWidth}" />
            </Border.RenderTransform>

            <ScrollViewer>
                <Grid Margin="5 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--Row 0-->
                    <Button Click="ItemPageReturn_Click"
                        Style="{StaticResource BoxBtnStyle}"
                        Content="返回"
                        Margin="0 5 10 0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        FontSize="18"
                        Width="80"
                        Height="35">
                    </Button>

                    <TextBlock x:Name="DosFileName"
                           Text="{Binding fileName}"
                           Margin="20 5 0 0"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Foreground="#ffffff"
                           FontSize="15"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis" />

                    <!--Row 1-->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition  Height="150" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Header"
                               Foreground="#ffffff"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="5 5 0 0"
                               FontWeight="Bold"
                               FontSize="16" />

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock FontSize="15"
                                       Text="Target Machine"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="Compilation Timestamp"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="Entry Point"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="Contained Sections"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="15"
                                       Text="{Binding header.TargetMachine}"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="{Binding header.CompilationTimestamp}"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="{Binding header.EntryPoint}"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                                <TextBlock FontSize="15"
                                       Text="{Binding header.ContainedSections}"
                                       Foreground="#ffffff"
                                       Margin="0 5 0 0" />
                            </StackPanel>
                        </Grid>

                    </Grid>

                    <!--Row 2-->
                    <!--<StackPanel Grid.Row="2" HorizontalAlignment="Stretch">-->
                    <TextBlock  Grid.Row="2"
                            Text="Sections"
                            Foreground="#ffffff"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="5 5 0 0"
                            FontWeight="Bold"
                            FontSize="16" />

                    <ListBox Grid.Row="2"
                         Background="#212529"
                         x:Name="DosFileConent"
                         Margin="0 30 0 0"
                         HorizontalContentAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ItemsSource="{Binding Sections}">
                        <ListBox.Template>
                            <ControlTemplate>
                                <Border>
                                    <DockPanel LastChildFill="True">
                                        <Grid DockPanel.Dock="Top"
                                          Height="30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0"
                                               Foreground="#ffffff"
                                               HorizontalAlignment="Center">Name</Label>
                                            <Label Grid.Column="1"
                                               Foreground="#ffffff"
                                               HorizontalAlignment="Center">Virtual Address</Label>
                                            <Label Grid.Column="2"
                                               Foreground="#ffffff"
                                               HorizontalAlignment="Center">Virtual Size</Label>
                                            <Label Grid.Column="3"
                                               Foreground="#ffffff"
                                               HorizontalAlignment="Center">Raw Data</Label>
                                        </Grid>
                                        <ScrollViewer Focusable="False">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </DockPanel>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <card:PEInfoContent DataContext="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!--</StackPanel>-->

                    <!--Row 3-->
                    <ListBox Grid.Row="3"
                         Background="#212529"
                         Margin="0 10 0 0"
                         HorizontalContentAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ItemsSource="{Binding imports}" 
                         Focusable="False">
                        <ListBox.Template>
                            <ControlTemplate>
                                <Border>
                                    <DockPanel LastChildFill="True" >
                                        <ItemsPresenter Focusable="False" />
                                    </DockPanel>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Expander Focusable="False" HorizontalContentAlignment="Stretch">
                                    <Expander.Header>
                                        <BulletDecorator>
                                            <BulletDecorator.Bullet>
                                                <Image Width="10" />
                                            </BulletDecorator.Bullet>
                                            <TextBlock Margin="20,0,0,0"
                                                   FontSize="12"
                                                   Foreground="#ffffff"
                                                   Text="{Binding DLLName}"></TextBlock>
                                        </BulletDecorator>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <ListBox ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                             Focusable="False"
                                        ItemsSource="{Binding FunctionName}"
                                             Background="#212529"
                                             BorderThickness="0"
                                             HorizontalContentAlignment="Stretch"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <TextBlock Text="{Binding }"
                                                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                                               Margin="0,2,0,0"
                                                               TextWrapping="NoWrap"
                                                               Foreground="#ffffff"
                                                               TextTrimming="CharacterEllipsis"
                                                               VerticalAlignment="Top"
                                                               HorizontalAlignment="Left"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
