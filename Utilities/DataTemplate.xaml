<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:VirusDetectionSystem.ViewModel"
                    xmlns:view="clr-namespace:VirusDetectionSystem.View">
    

    <DataTemplate DataType="{x:Type vm:DetectionRecordVM}">
        <view:DetectionRecordView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:FileScanVM}">
        <view:FileScanView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PEFileAnalysisVM}">
        <view:PEFileAnalysisView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:VirusDatabaseVM}">
        <view:VirusDatabaseView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:FileWhiteListVM}">
        <view:FileWhiteListView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:HexEditorVM}">
        <view:HexEditorView />
    </DataTemplate>

</ResourceDictionary>